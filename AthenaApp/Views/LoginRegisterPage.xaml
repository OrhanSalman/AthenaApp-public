<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AthenaApp.Views.LoginRegisterPage"
             BackgroundColor="{DynamicResource ThemeBackGroundColor}"
             BarBackgroundColor="#203984"
             Shell.NavBarIsVisible="False">
    

   
    
    
    <ContentPage Title="Login"  >
        
        <Shell.TitleView>
            <Image Source="athena_logo.png"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        </Shell.TitleView>

        
        <StackLayout BackgroundColor="#e6e6e6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout BackgroundColor="#203984" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                        <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                            <Image Source="AthenaLogo.png" VerticalOptions="Center" HeightRequest="65" />
                        </ContentView>


                    </StackLayout>

                </StackLayout>

                <StackLayout
                Margin="30,250,30,0"
                Padding="0"
                HorizontalOptions="FillAndExpand">
                    <Frame
                    Margin="0"
                    Padding="0"
                    BackgroundColor="White"
                    HasShadow="True"
                    HeightRequest="700">


                        <StackLayout>
                            
                            <StackLayout Margin="15,0" Padding="0">
                                <!-- Grid for the logos of the universities -->
                                <Grid x:Name="UniPicturesLogin" HeightRequest="175">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>



                                    <ContentView Grid.Row="0" Grid.Column="0" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniMaribor" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="1" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniSiegen" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="2" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniVilnius" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="3" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniHellenic" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="0" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniPorto" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="1" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniCusano" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="2" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniOrleans" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                </Grid>
                                <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="DarkGray"
                                CornerRadius="30"
                                HorizontalOptions="FillAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <Entry
                                        x:Name="UserInputMail"
                                        Margin="10,0,0,0"
                                        ClearButtonVisibility="WhileEditing"
                                        FontAttributes="Italic"
                                        Keyboard="Email"
                                        Placeholder="youremail@mail.com"
                                        ReturnType="Next"
                                        Text="{Binding UserInputMail}"
                                        TextColor="Black"
                                        WidthRequest="300" />
                                    </StackLayout>
                                </Frame>


                                <StackLayout Orientation="Horizontal">
                                    <Label
                                    Margin="10,2,10,10"
             />
                                </StackLayout>

                                <Button
                                BackgroundColor="MidnightBlue"
                                Clicked="ButtonLogin_Clicked"
                                Command="{Binding LoginComand}"
                                CornerRadius="30"
                                Text="Send Login Mail"
                                TextColor="White" />


                                <StackLayout
                                Margin="0,25"
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal">
                                    
                       
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Grid>
        </StackLayout>

    </ContentPage>


    <ContentPage Title="Register" >

        <StackLayout BackgroundColor="#e6e6e6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout
                    BackgroundColor="#203984"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand">
                    <StackLayout
                        HorizontalOptions="Center"
                        Orientation="Horizontal"
                        VerticalOptions="Center">
                        <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                            <Image
                                HeightRequest="64"
                                Source="athena_logo.png"
                                VerticalOptions="Center" />
                        </ContentView>
                    </StackLayout>

                </StackLayout>

                <StackLayout
                    Margin="30,250,30,0"
                    Padding="0"
                    HorizontalOptions="FillAndExpand">
                    <Frame
                        Margin="0"
                        Padding="0"
                        BackgroundColor="White"
                        HasShadow="True"
                        HeightRequest="700">

                        <StackLayout>


                            <StackLayout Margin="15,0" Padding="0">
                                <!-- Grid for the logos of the universities -->
                                <Grid x:Name="UniPicturesRegister" HeightRequest="175">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                  
                                      
                                    <ContentView Grid.Row="0" Grid.Column="0" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniMaribor" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="1" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniSiegen" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="2" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniVilnius" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="0" Grid.Column="3" Padding="0,0,0,0" VerticalOptions="FillAndExpand">
                                        <Image Source="UniHellenic" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="0" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniPorto" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="1" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniCusano" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                    <ContentView Grid.Row="1" Grid.Column="2" Padding="0,0,0,40" VerticalOptions="FillAndExpand">
                                        <Image Source="UniOrleans" VerticalOptions="Center" HeightRequest="65" />
                                    </ContentView>
                                </Grid>
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="DarkGray"
                                    CornerRadius="30"
                                    HorizontalOptions="FillAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <Entry
                                            x:Name="UserInputName"
                                            Margin="10,0,0,0"
                                            ClearButtonVisibility="WhileEditing"
                                            FontAttributes="Italic"
                                            Keyboard="Email"
                                            Placeholder="Choose Username"
                                            ReturnType="Next"
                                            Text="{Binding UserInputName}"
                                            TextColor="Black"
                                            WidthRequest="300" />
                                    </StackLayout>
                                </Frame>
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="DarkGray"
                                    CornerRadius="30"
                                    HorizontalOptions="FillAndExpand">
      
                                </Frame>
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="DarkGray"
                                    CornerRadius="30"
                                    HorizontalOptions="FillAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <Entry
                                            x:Name="UserInputNewMail"
                                            Margin="10,0,0,0"
                                            ClearButtonVisibility="WhileEditing"
                                            FontAttributes="Italic"
                                            Keyboard="Email"
                                            Placeholder="youremail@mail.com"
                                            ReturnType="Next"
                                            Text="{Binding UserInputNewMail}"
                                            TextColor="Black"
                                            WidthRequest="300" />
                                    </StackLayout>
                                </Frame>
                                <Frame
                                    Padding="0"
                                    BackgroundColor="Transparent"
                                    BorderColor="DarkGray"
                                    CornerRadius="30"
                                    HorizontalOptions="FillAndExpand">

                                </Frame>


                                <Button
                                    BackgroundColor="MidnightBlue"
                                    Clicked="RegisterButton"
                                    CornerRadius="30"
                                    Text="SIGN UP"
                                    TextColor="White" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Grid>
        </StackLayout>

    </ContentPage>
</TabbedPage>