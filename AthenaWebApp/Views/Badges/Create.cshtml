@model AthenaWebApp.Models.Badge
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Badge</h4>
<hr />
<div class="row" style="width: stretch; height: stretch">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GeneralBadge" /> @Html.DisplayNameFor(model => model.GeneralBadge)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActivityId" class="control-label"></label>
                <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BadgeName" class="control-label"></label>
                <input asp-for="BadgeName" class="form-control" />
                <span asp-validation-for="BadgeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceForBadge" class="control-label"></label>
                <input asp-for="DistanceForBadge" class="form-control" />
                <span asp-validation-for="DistanceForBadge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeDescription" class="control-label"></label>
                <input asp-for="BadgeDescription" class="form-control" />
                <span asp-validation-for="BadgeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeImage" class="control-label"></label>
                <input type="file" name="Image" id="ImageInput" asp-for="BadgeImage" class="form-control" />
                <span asp-validation-for="BadgeImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}