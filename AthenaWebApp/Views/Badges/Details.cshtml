@model AthenaWebApp.Models.Badge

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Badge</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralBadge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralBadge)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.ActivityType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadgeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadgeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistanceForBadge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistanceForBadge)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadgeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadgeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadgeImage)
        </dt>
        <dd class="col-sm-10">
            <div class="form-group">
                @if (Model.BadgeImage != null)
                {
                    <img id="profilePicture" style="width:100px;height:100px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.BadgeImage))">
                }
                else
                {
                    <img id="profilePicture" style="width: 80px; height: 80px; object-fit: cover " src="">
                }
                <span asp-validation-for="@Model.BadgeImage" class="text-danger"></span>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
