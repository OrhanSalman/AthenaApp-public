@model IEnumerable<AthenaWebApp.Models.Badge>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadgeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistanceIntervallBegin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistanceIntervallEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadgeImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadgeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceIntervallBegin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceIntervallEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
