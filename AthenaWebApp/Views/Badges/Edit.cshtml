@model AthenaWebApp.Models.Badge

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Badge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ActivityId" class="control-label"></label>
                <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
                <span asp-validation-for="ActivityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeName" class="control-label"></label>
                <input asp-for="BadgeName" class="form-control" />
                <span asp-validation-for="BadgeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceIntervallBegin" class="control-label"></label>
                <input asp-for="DistanceIntervallBegin" class="form-control" />
                <span asp-validation-for="DistanceIntervallBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceIntervallEnd" class="control-label"></label>
                <input asp-for="DistanceIntervallEnd" class="form-control" />
                <span asp-validation-for="DistanceIntervallEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadgeDescription" class="control-label"></label>
                <input asp-for="BadgeDescription" class="form-control" />
                <span asp-validation-for="BadgeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    @if (Model.BadgeImage != null)
                    {
                        <img id="profilePicture" style="width:100px;height:100px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.BadgeImage))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width: 80px; height: 80px; object-fit: cover " src="">
                    }
                </div>

                <input type="file" name="Image" id="ImageInput" asp-for="BadgeImage" class="form-control" />
                <span asp-validation-for="BadgeImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
