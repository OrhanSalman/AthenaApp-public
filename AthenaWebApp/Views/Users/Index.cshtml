@model IEnumerable<AthenaWebApp.Areas.Identity.IdentityModels.UserExtension>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoggedIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastActivity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoggedIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfilePicture)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <input type="submit" value="Details" class="btn btn-primary" />
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
